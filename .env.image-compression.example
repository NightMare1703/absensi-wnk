# .env.example untuk Image Compression Settings
# Copy and paste ke file .env Anda jika diperlukan

# ============================================
# IMAGE COMPRESSION SETTINGS
# ============================================

# Aktifkan atau matikan image compression
# true = kompresi otomatis aktif (default)
# false = simpan gambar tanpa kompresi
IMAGE_COMPRESSION_ENABLED=true

# Kualitas kompresi (1-100)
# 90-100 = High quality, ukuran lebih besar
# 75-85  = Balanced (recommended), good quality, ukuran kecil
# 50-74  = Low quality, storage agresif
# Default: 75 (recommended)
IMAGE_COMPRESSION_QUALITY=75

# Maksimal lebar gambar (pixel)
# Jika gambar lebih lebar dari ini, akan di-resize
# Default: 1280 (Full HD width)
IMAGE_COMPRESSION_MAX_WIDTH=1280

# Maksimal tinggi gambar (pixel)
# Jika gambar lebih tinggi dari ini, akan di-resize
# Default: 720 (HD height)
IMAGE_COMPRESSION_MAX_HEIGHT=720

# Format output gambar
# webp = Modern format, paling kecil (recommended)
# jpg  = Traditional format, medium size
# png  = Lossless, ukuran besar
# Default: webp
IMAGE_COMPRESSION_FORMAT=webp

# Log semua proses kompresi untuk monitoring
# true  = Catat di storage/logs/laravel.log
# false = Jangan catat (lebih cepat, tapi susah debug)
# Default: true
IMAGE_COMPRESSION_LOGGING=true

# ============================================
# QUICK PRESETS - Copy and paste salah satu di bawah
# ============================================

# PRESET 1: HIGH QUALITY (untuk arsip penting)
# IMAGE_COMPRESSION_QUALITY=90
# IMAGE_COMPRESSION_MAX_WIDTH=1920
# IMAGE_COMPRESSION_MAX_HEIGHT=1080

# PRESET 2: BALANCED (default, recommended)
# IMAGE_COMPRESSION_QUALITY=75
# IMAGE_COMPRESSION_MAX_WIDTH=1280
# IMAGE_COMPRESSION_MAX_HEIGHT=720

# PRESET 3: STORAGE SAVER (untuk storage terbatas)
# IMAGE_COMPRESSION_QUALITY=60
# IMAGE_COMPRESSION_MAX_WIDTH=800
# IMAGE_COMPRESSION_MAX_HEIGHT=600

# PRESET 4: AGGRESSIVE (emergency, storage sangat terbatas)
# IMAGE_COMPRESSION_QUALITY=50
# IMAGE_COMPRESSION_MAX_WIDTH=640
# IMAGE_COMPRESSION_MAX_HEIGHT=480
